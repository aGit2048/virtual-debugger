<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CustomControlLibrary">

    <Style TargetType="{x:Type local:LabelToggleButton}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LabelToggleButton}">
                    <Border  x:Name="border" Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"  Padding="8,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- 复选框 -->
                            <Border x:Name="checkBox" Width="14" Height="14" 
                                    BorderBrush="#212121" 
                                    BorderThickness="1" Background="#2a2a2a" 
                                    CornerRadius="2" Margin="0,0,8,0">
                                <Path x:Name="checkMark" Data="M4,6 L6,8 L12,4"  Stroke="#e6e6e6"
                                  StrokeThickness="2" Stretch="Fill" Opacity="0" StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"/>
                            </Border>
                            <!-- 内容 -->
                            <ContentPresenter x:Name="contentPresenter"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- 选中状态 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkMark" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>